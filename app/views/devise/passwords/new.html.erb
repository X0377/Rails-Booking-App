<div class="auth-container">
  <h2>パスワードをお忘れですか？</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
  </div>

  <div class="form-actions">
    <%= f.submit "パスワード再設定手順を送信", class: "submit-button" %>
  </div>
  <% end %>

  <div class="auth-links">
    <%= link_to "ログイン", new_session_path(resource_name) %>
    <%= link_to "新規登録", new_registration_path(resource_name) %>
  </div>
</div>