<div class="auth-container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-check">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, "ログイン状態を保存する" %>
  </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "ログイン", class: "submit-button" %>
  </div>
  <% end %>

  <div class="auth-links">
    <%= link_to "新規登録", new_registration_path(resource_name) %>
    <% if devise_mapping.recoverable? %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %>
    <% end %>
  </div>
</div>